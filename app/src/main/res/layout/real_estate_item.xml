<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5">

    <ImageView
        android:id="@+id/estate_img"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.4"/>

    <TextView
        android:id="@+id/estate_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/estate_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/estate_img" />

    <TextView
        android:id="@+id/estate_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/estate_name"
        app:layout_constraintEnd_toEndOf="@+id/estate_name"
        app:layout_constraintTop_toBottomOf="@+id/estate_name" />

    <TextView
        android:id="@+id/estate_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Price"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/estate_description"
        app:layout_constraintEnd_toEndOf="@+id/estate_description"
        app:layout_constraintTop_toBottomOf="@+id/estate_description" />

    <TextView
        android:id="@+id/estate_sended"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sended"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/estate_price"
        app:layout_constraintEnd_toEndOf="@+id/estate_price"
        app:layout_constraintTop_toBottomOf="@+id/estate_price" />

</androidx.constraintlayout.widget.ConstraintLayout>
